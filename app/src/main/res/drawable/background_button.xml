<!-- res/drawable/button_background_with_shadow.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#80000000"/> <!-- Màu của bóng (đen với độ mờ) -->
            <corners android:radius="10dp"/>
            <padding android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp"/>
        </shape>
    </item>
    <!-- Button layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFA500"/> <!-- Màu của nút -->
            <corners android:radius="10dp"/>
        </shape>
    </item>
</layer-list>
