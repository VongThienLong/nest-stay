<!-- rounded_corners_with_shadow.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:top="1dp" android:right="1dp" android:left="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Màu nền của TextInputLayout -->
            <corners android:radius="8dp" /> <!-- Độ cong của các góc, ở đây là 8dp -->
            <stroke
                android:width="1dp"
                android:color="#FFFFFF" /> <!-- Đường viền bo tròn -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Màu nền trong suốt -->
            <corners android:radius="8dp" /> <!-- Độ cong của các góc, ở đây là 8dp -->
            <padding android:bottom="1dp" /> <!-- Khoảng cách bottom để tạo hiệu ứng shadow -->
        </shape>
    </item>
</layer-list>
